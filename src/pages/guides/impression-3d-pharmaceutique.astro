    margin-bottom: 1.5rem;
  }

  .article-content ul {
    margin-bottom: 1.5rem;
    padding-left: 1.5rem;
  }

  .article-content li {
    margin-bottom: 0.75rem;
  }

  .highlight-box {
    background: #F8FAFB;
    border-left: 4px solid var(--primary-blue);
    padding: 1.5rem;
    margin-bottom: 1.5rem;
    border-radius: 4px;
  }

  .highlight-box h4 {
    margin-top: 0;
  }

  .highlight-box p {
    margin-bottom: 0;
  }

  .related-articles {
    margin-top: 4rem;
    padding-top: 2rem;
    border-top: 2px solid var(--border-color);
  }

  .related-articles h2 {
    margin-top: 0;
  }

  .related-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .related-card {
    background: white;
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--border-color);
    text-decoration: none;
    transition: all 0.2s;
  }

  .related-card:hover {
    transform: translateY(-2px);
    box-shadow: var(--hover-shadow);
  }

  .related-card h3 {
    color: var(--primary-blue);
    font-size: 1.125rem;
    margin-top: 0;
    margin-bottom: 0.5rem;
  }

  .related-card p {
    color: var(--text-secondary);
    font-size: 0.9375rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .article-container {
      padding: 1rem;
    }

    .article-header h1 {
      font-size: 2rem;
    }

    .article-content h2 {
      font-size: 1.5rem;
    }

    .related-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
