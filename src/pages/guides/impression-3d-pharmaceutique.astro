    align-items: center;
    gap: 0.75rem;
    color: var(--text-secondary);
    font-size: 0.9375rem;
  }

  .separator {
    color: var(--border-color);
  }

  .article-content {
    font-size: 1.0625rem;
    line-height: 1.8;
    color: var(--text-primary);
  }

  .article-content section {
    margin-bottom: 3rem;
  }

  .article-content h2 {
    font-size: 1.875rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1.5rem;
    margin-top: 2.5rem;
  }

  .article-content h3 {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 1rem;
    margin-top: 2rem;
  }

  .article-content h4 {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--primary-blue);
    margin-bottom: 0.5rem;
  }

